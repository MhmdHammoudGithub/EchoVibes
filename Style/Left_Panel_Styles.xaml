<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Style x:Key="PanelUserName" TargetType="TextBlock" >
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#002455"/>
    </Style>

   


    <Style x:Key="PanelToggleButton" TargetType="ToggleButton" >
        
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderBrush" Value="#002455"/>
        <Setter Property="Background" Value="#B7EDF6"/>
        <Setter Property="Foreground" Value="#002455"/>

    </Style>
    
    
    
    <Style x:Key="PanelButton" TargetType="Button" >
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderBrush" Value="#002455"/>
        <Setter Property="Background" Value="#B7EDF6"/>
        <Setter Property="Foreground" Value="#002455"/>

    </Style>






</ResourceDictionary>