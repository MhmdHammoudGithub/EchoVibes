<Page x:Class="EchoVibe.View.Pages.Search_Result_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EchoVibe.View.Pages"
      xmlns:controls="clr-namespace:EchoVibe.View.Control_User"
      xmlns:scrolls="clr-namespace:EchoVibe.View.Control_User.ScrollViewers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search_Result">

    <Grid x:Name="Search_Result_Page_Grid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <controls:User_Search_Input x:Name="Searched_UserName"
                                    Grid.Row="0"
                                    Placeholder="Input a username to search" 
                                    Height="60" 
                                    ImageSource="/Images/Search icon.jpeg"/>
    </Grid>
</Page>
