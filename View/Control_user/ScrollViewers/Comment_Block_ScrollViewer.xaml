<UserControl x:Class="EchoVibe.View.Control_User.ScrollViewers.Comment_Block_ScrollViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoVibe.View.Control_User.ScrollViewers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="Comment_Blocks_Grid" Grid.Column="0">

            <ScrollViewer  x:Name="Comment_Block_Scroll_Viewer_In_XAML" 
                           VerticalScrollBarVisibility="Auto" 
                           BorderThickness="10"
                           Background="White"
                           BorderBrush="blue"
                           Margin="20 5 20 10"
                           ScrollChanged="Comment_Block_Scroll_Viewer_In_XAML_ScrollChanged">




                <StackPanel x:Name="Comment_Block_StackPanel_In_The_ScrollViewer"/>





            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
